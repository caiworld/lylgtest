<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.caiworld.caihao.lylgapp.HelpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/fa1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--发快递地址-->
                <TextView
                    android:id="@+id/sendAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="见贤路"
                    android:visibility="gone" />
                <!--发货信息提示-->
                <TextView
                    android:id="@+id/sendHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请选择发货人地址"
                    android:visibility="visible" />
                <!--寄快递的人信息，一般即好友或者卖家信息，可不填-->
                <TextView
                    android:id="@+id/sendDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="张三  12345678901"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=" > " />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/shou1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--守快递地址-->
                <TextView
                    android:id="@+id/receiveAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开元大道"
                    android:visibility="gone" />
                <!--收货信息提示-->
                <TextView
                    android:id="@+id/receiveHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请选择收货人地址"
                    android:visibility="visible" />
                <!--收快递的人信息，一般是自己或亲友，必填-->
                <TextView
                    android:id="@+id/receiveDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="李四  98765432101"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=" > " />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_receive_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"
                android:text="取货时间" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="05-31 20:20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=" > " />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_goods_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"
                android:text="物品信息" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="默认(其他/100元/5公斤)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=" > " />
        </LinearLayout>
        <!--跑腿费规则-->
        <TextView
            android:id="@+id/tv_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="世上没有免费的跑腿(^_^)"
            android:textColor="@drawable/textrules"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="预估费用： ￥14.95"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_margin="5dp"
            />

        <Button
            android:background="#3aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="payment"
            android:text="去下单" />
    </LinearLayout>
</RelativeLayout>
